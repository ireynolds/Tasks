<UserControl x:Class="Tasks.Views.Groups.GroupPartial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <StackPanel Background="{StaticResource PhoneBackgroundBrush}">
        <TextBlock Margin="0,-12,0,0" Text="{Binding Title}" Style="{StaticResource PhoneTextExtraLargeStyle}" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding CountString}" FontWeight="Bold" Margin="0,0,3,0" Style="{StaticResource PhoneTextAccentStyle}" />
            <TextBlock Text="{Binding ItemsString}" Style="{StaticResource PhoneTextSubtleStyle}" />
        </StackPanel>
    </StackPanel>
</UserControl>